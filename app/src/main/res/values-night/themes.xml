<resources xmlns:tools="http://schemas.android.com/tools">
        <!-- Base application theme. -->
        <style name="Theme.KejaPlus" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/accent</item>

            <item name="colorSecondary">@color/backColor</item>

            <item name="colorAccent">@color/accent</item>

            <!-- Status bar color. -->
            <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorAccent</item>
            <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>


            <item name="android:fontFamily">@font/montserrat_regular</item>
            <item name="textInputStyle">@style/input_layout</item>


            <!-- Background. -->
            <item name="android:colorBackground">@color/color_background</item>
            <item name="colorOnBackground">@color/color_on_background</item>

            <!-- Surface. -->
            <item name="colorSurface">@color/pressed_bg</item>
            <item name="colorOnSurface">@color/black</item>

            <!-- Toolbar-->
            <item name="toolbarStyle">@style/Toolbar</item>
            <item name="appBarLayoutStyle">@style/Appbar</item>

        </style>

        <style name="Theme.KejaPlus.App.Starting" parent="Theme.SplashScreen">
            <!-- Set the splash screen background, animated icon, and animation duration. -->
            <item name="windowSplashScreenBackground">@color/white</item>

            <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
                 animated drawable. One of these is required. -->
            <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_kejaplus_foreground</item>
            <!-- Required for animated icons -->
            <item name="windowSplashScreenAnimationDuration">2000</item>
            <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

            <!-- Set the theme of the Activity that directly follows your splash screen. -->
            <!-- Required -->
            <item name="postSplashScreenTheme">@style/Theme.KejaPlus</item>
        </style>


        <style name="Theme.kejaPlus.Intro" parent="Theme.KejaPlus">
            <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
            <item name="android:statusBarColor" tools:ignore="NewApi">@color/accent</item>
            <item name="android:windowBackground">@color/splash_background</item>
        </style>
    </resources>


