<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KejaPlus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/backColor</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Login_Form" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/backColor</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <dimen name="title_padding">4dp</dimen>

    <style name="title" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:padding">@dimen/title_padding</item>
        <item name="android:textColor">@color/backColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_small" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/small_btn</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawableEnd">@drawable/ic_check_black_24dp</item>
        <item name="android:drawablePadding">@dimen/view_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableTint" tools:ignore="NewApi" tools:targetApi="m">@color/black
        </item>
    </style>

    <style name="myLoginButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="inputForm" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">@color/backColor</item>
        <item name="colorPrimaryDark">@color/backColor</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" />

    <style name="del_btn">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">@dimen/view_padding</item>
        <item name="android:background">@drawable/remove_btn_bg</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@color/red_btn_bg_color</item>
        <item name="android:drawableEnd">@drawable/ic_delete_forever_black_24dp</item>
        <item name="android:text">Remove</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red_btn_bg_color</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Theme.KejaPlus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KejaPlus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KejaPlus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <!--<item name="searchIcon">@null</item> -->
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/white</item>
        <item name="background">@color/white</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">@string/search_property</item>
        <item name="android:queryHint">@string/search_property</item>
        <item name="android:background">@drawable/search_view_background</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
</resources>
