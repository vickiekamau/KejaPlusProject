<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KejaPlus" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/accent</item>

        <item name="colorSecondary">@color/backColor</item>

        <item name="colorAccent">@color/accent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>


        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="textInputStyle">@style/input_layout</item>


        <!-- Background. -->
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorOnBackground">@color/color_on_background</item>

        <!-- Surface. -->
        <item name="colorSurface">@color/pressed_bg</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Toolbar-->
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="appBarLayoutStyle">@style/Appbar</item>

    </style>
</resources>
