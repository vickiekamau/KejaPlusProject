<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Login_Form" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryDark">@color/backColor</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <dimen name="title_padding">4dp</dimen>

    <style name="title" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:padding">@dimen/title_padding</item>
        <item name="android:textColor">@color/backColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_small" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/small_btn</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawableEnd">@drawable/ic_check_black_24dp</item>
        <item name="android:drawablePadding">@dimen/view_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_login" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:drawablePadding">@dimen/view_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myLoginButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="inputForm" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="colorPrimary">@color/backColor</item>
        <item name="colorPrimaryDark">@color/backColor</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" />




    <style name="del_btn">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">@dimen/view_padding</item>
        <item name="android:background">@drawable/remove_btn_bg</item>
        <item name="android:drawableEnd">@drawable/ic_delete_forever_black_24dp</item>
        <item name="android:text">Remove</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red_btn_bg_color</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>



    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <!--<item name="searchIcon">@null</item> -->
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/white</item>
        <item name="background">@color/white</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">@string/search_property</item>
        <item name="android:queryHint">@string/search_property</item>
        <item name="android:background">@drawable/search_view_background</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <!--    Primary Font -->
    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>


    <!--    Edit Text -->
    <style name="Theme.KejaPlus.TextInputLayout.Outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Other colors-->
        <item name="colorError">@color/red_btn_bg_color</item>
        <item name="colorOnError">@color/red_btn_bg_color</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="strokeColor">@color/secondary</item>
        <item name="boxBackgroundColor">@color/secondary</item>

        <item name="endIconTint">@color/black</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!--    APPBAR -->
    <style name="Appbar" parent="Widget.Design.AppBarLayout">
        <item name="colorPrimary">@color/accent</item>
        <item name="contentScrim">@color/accent</item>
        <item name="scrimBackground">@color/accent</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="background">@color/accent</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="android:background">@color/accent</item>
        <item name="navigationIconTint">@color/gray</item>
        <item name="contentScrim">@color/accent</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/backColor</item>
    </style>

    <style name="Theme.KejaPlus.NoActionBar">Theme.MaterialComponents.DayNight.NoActionBar</style>



</resources>